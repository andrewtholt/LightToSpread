#!/bin/sh

# set -x

LEN=`getconf LONG_BIT`

if [ $LEN -ne 64 ]; then
    echo "Attempting to build on wrong platform."
    exit 1
fi


echo "Build debian package"
echo "First make everything."

DESTDIR="./debian-i686"
export DESTDIR

if [ ! -d ]; then
    mkdir $DESTDIR
fi

./build.sh install

HERE=`pwd`

dpkg -b ./debian-i686 .

